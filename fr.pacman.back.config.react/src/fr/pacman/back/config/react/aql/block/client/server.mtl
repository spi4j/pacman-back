[comment écriture du fichier de configuration Maven pour le sous-projet serveur (infrastructure)./]
[template public pom (any : ecore::EObject)]
  <project xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    
    <modelVersion>4.0.0</modelVersion>
    
    <parent>
        <groupId>[any.namePackageProject()/]</groupId>
        <artifactId>[any.nameProject()/]</artifactId>
        <version>0.0.1-SNAPSHOT</version>
    </parent>
    <artifactId>[any.nameProjectServer()/]</artifactId>
    <packaging>pom</packaging>
    
    <properties>
        <!-- Pas besoin de version node/npm pour l'installation locale -->
        <frontend.dir>${project.basedir}/[any.nameProject()/]</frontend.dir>
     </properties>
     
     <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>[any.versionMavenExecPlugin()/]</version>
                
                <executions>
                    <!-- bug npm sur les certificats -->
                    <!-- 
                    <execution>
                        <id>check-npm-ssl</id>
                        <phase>validate</phase>
                        <goals>
                           <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>npm</executable>
                            <arguments>
                               <argument>config</argument>
                               <argument>get</argument>
                               <argument>strict-ssl</argument>
                            </arguments>
                        </configuration>
                    </execution>
                    -->
                    <!-- bug npm sur les certificats -->
                    <!-- 
                    <execution>
                        <id>disable-strict-ssl</id>
                        <phase>generate-resources</phase>
                        <goals>
                           <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>npm</executable>
                            <arguments>
                                <argument>set</argument>
                                <argument>strict-ssl</argument>
                                <argument>false</argument>
                            </arguments>
                        </configuration>
                    </execution>
                    -->
                    <!-- npm install -->
                    <execution>
                        <id>npm-install</id>
                        <phase>generate-resources</phase>
                        <goals>
                           <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>npm</executable>
                            <workingDirectory>${frontend.dir}</workingDirectory>
                            <arguments>
                               <argument>install</argument>
                            </arguments>
                        </configuration>
                    </execution>
                    
                    <!-- npm build -->
                    <execution>
                        <id>npm-build</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>npm</executable>
                            <workingDirectory>${frontend.dir}</workingDirectory>
                            <arguments>
                                <argument>run</argument>
                                <argument>build</argument>
                            </arguments>
                        </configuration>
                    </execution>
                    
                    <!-- npm pack -->
                    <execution>
                        <id>npm-pack</id>
                        <phase>package</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>npm</executable>
                            <workingDirectory>${frontend.dir}</workingDirectory>
                            <arguments>
                                <argument>pack</argument>
                            </arguments>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-resources-plugin</artifactId>
                <version>[any.versionMavenResourcesPlugin()/]</version>
                <!-- Copier le .tgz de npm pack vers target -->
                <executions>
                    <execution>
                        <id>copy-pack-to-target</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>${frontend.dir}</directory>
                                    <includes>
                                        <include>*.tgz</include>
                                    </includes>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                    
                    <!-- Copier dist/ vers les ressources Maven (si besoin) -->
                    <execution>
                        <id>copy-dist-resources</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}</outputDirectory>
                            <resources>
                               <resource>
                                   <directory>${frontend.dir}/[any.dirReactDistribution().replace('/','')/]</directory>
                                   <targetPath>[any.dirReactDistribution().replace('/','')/]</targetPath>
                               </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
  </project>
[/template]

