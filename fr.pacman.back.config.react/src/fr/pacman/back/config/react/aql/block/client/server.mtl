[template public tsConfigBuild (any : ecore::EObject)]
  {
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "outDir": "[any.dirReactDistribution().replace('/','')/]",
      "declaration": true,
      "declarationMap": false,
      "sourceMap": false,
      "module": "ESNext",
      "moduleResolution": "Bundler",
