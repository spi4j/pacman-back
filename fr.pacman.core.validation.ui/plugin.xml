<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="fr.pacman.core.validation.ui.handlers.ValidationGeneratorsHandler"
            commandId="fr.pacman.core.validation.ui.commands.ValidationGeneratorCommand">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <menu
               id="fr.pacman.ui.menus.generators"
               icon="icons/cali.png"
               tooltip="Liste des générateurs Cali"
               label="Générateurs Cali">
            <command
                  commandId="fr.pacman.core.validation.ui.commands.ValidationGeneratorCommand"
                  id="fr.pacman.core.validation.ui.commands.ValidationGeneratorCommand" 
                  icon="icons/cali.png" 
                  label="Validation du diagramme de modélisation">
               <visibleWhen
                     checkEnabled="false">
                  <with
                        variable="selection">
                     <iterate
                           ifEmpty="false"
                           operator="and">
                        <and>
                           <instanceof
                                 value="org.eclipse.core.resources.IFile">
                           </instanceof>
                           <test
                                 property="org.eclipse.core.resources.extension"
                                 value="entity">
                           </test>
                        </and>
                     </iterate>
                  </with>
               </visibleWhen>
            </command>
            <command
                  commandId="fr.pacman.core.validation.ui.commands.ValidationGeneratorCommand"
                  id="fr.pacman.core.validation.ui.commands.ValidationGeneratorCommand" 
                  icon="icons/cali.png" 
                  label="Validation du diagramme de modélisation">
               <visibleWhen
                     checkEnabled="false">
                  <with
                        variable="selection">
                     <iterate
                           ifEmpty="false"
                           operator="and">
                        <and>
                           <instanceof
                                 value="org.eclipse.core.resources.IFile">
                           </instanceof>
                           <test
                                 property="org.eclipse.core.resources.extension"
                                 value="soa">
                           </test>
                        </and>
                     </iterate>
                  </with>
               </visibleWhen>
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="fr.pacman.core.validation.ui.commands.generatorsCategory"
            name="Generators">
      </category>
      <command
            categoryId="fr.pacman.core.validation.ui.commands.generatorsCategory"
            id="fr.pacman.core.validation.ui.commands.ValidationGeneratorCommand"
            name="fr::pacman::core::validation::generateValidation">
      </command>
   </extension>
</plugin>

